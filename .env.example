# TD Lead Engine - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# CORE SETTINGS
# ===========================================

# Environment: development, staging, production
TD_ENGINE_ENV=production

# Secret key for sessions and tokens (generate with: openssl rand -hex 32)
TD_ENGINE_SECRET_KEY=your-secret-key-here

# Port configuration
PORT=5000
WEBHOOK_PORT=5001

# ===========================================
# NOTIFICATION INTEGRATIONS
# ===========================================

# Slack - Get from https://api.slack.com/apps
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Twilio SMS - Get from https://console.twilio.com
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_FROM_NUMBER=+1234567890
TWILIO_TO_NUMBER=+1987654321

# SendGrid Email - Get from https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=leads@yourdomain.com
EMAIL_TO=you@yourdomain.com

# ===========================================
# CRM INTEGRATIONS
# ===========================================

# HubSpot - Get from Settings > Integrations > Private Apps
HUBSPOT_API_KEY=your-hubspot-api-key

# Zapier - Your Zapier webhook URL
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/YOUR/WEBHOOK

# ===========================================
# AI FEATURES (Optional)
# ===========================================

# OpenAI - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# ===========================================
# DATABASE (For Production)
# ===========================================

# PostgreSQL (optional, for production scaling)
POSTGRES_USER=tdengine
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=leads
POSTGRES_PORT=5432
DATABASE_URL=postgresql://tdengine:your-secure-password@postgres:5432/leads

# Redis (optional, for caching)
REDIS_URL=redis://redis:6379/0
REDIS_PORT=6379

# ===========================================
# WEBSITE API (FastAPI Ingestion Service)
# ===========================================

# Shared secret for website lead ingestion API
TD_API_SECRET=your-secure-api-secret-here

# API server binding
TD_API_HOST=0.0.0.0
TD_API_PORT=8000

# Database path (used by website API)
TD_DATABASE_PATH=~/.td-lead-engine/leads.db

# ===========================================
# NOTIFICATIONS (Website Lead Alerts)
# ===========================================

# Enable/disable email notifications for hot leads
TD_NOTIFICATIONS_ENABLED=false
TD_NOTIFICATION_METHOD=smtp

# SMTP settings for lead alerts
TD_SMTP_HOST=smtp.gmail.com
TD_SMTP_PORT=587
TD_SMTP_USER=your-email@gmail.com
TD_SMTP_PASSWORD=your-app-password
TD_FROM_EMAIL=leads@tdrealtyohio.com
TD_NOTIFY_EMAIL=travis@tdrealtyohio.com

# Webhook notification URL (alternative to email)
TD_WEBHOOK_URL=

# ===========================================
# WEBHOOK SECURITY
# ===========================================

# Secret for validating incoming webhooks
WEBHOOK_SECRET=your-webhook-secret

# ===========================================
# EXTERNAL APIS (For Data Enrichment)
# ===========================================

# Zillow API (if available)
ZILLOW_API_KEY=

# Google APIs
GOOGLE_API_KEY=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# LinkedIn Sales Navigator (OAuth)
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
