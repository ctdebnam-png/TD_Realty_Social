FROM node:20-alpine AS builder

WORKDIR /app
COPY apps/dashboard/package*.json ./
RUN npm ci

COPY apps/dashboard/ ./
RUN npm run build

FROM nginx:alpine
COPY --from=builder /app/dist /usr/share/nginx/html
COPY docker/nginx-dashboard.conf /etc/nginx/conf.d/default.conf

EXPOSE 3000
CMD ["nginx", "-g", "daemon off;"]
