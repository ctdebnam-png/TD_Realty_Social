FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY pyproject.toml ./
RUN pip install --no-cache-dir -e . && \
    pip install --no-cache-dir fastapi uvicorn[standard]

# Copy source
COPY src/ ./src/

# Create data directory
RUN mkdir -p /data

EXPOSE 8000
CMD ["python", "-m", "td_lead_engine.website_api"]
